<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Sprint2.AccueilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- Titre principal -->
        <TextView
            android:id="@+id/txtAccueil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page d'accueil"
            android:textSize="32sp"
            android:textColor="#2ECC71"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"/>

        <!-- Liste Exercices -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercices"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:padding="4dp"
            android:background="#DCE6F1"/>

        <ListView
            android:id="@+id/listeAccueil1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:layout_marginBottom="16dp"/>

        <!-- Liste Nutrition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IngrÃ©dients"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:padding="4dp"
            android:background="#DCE6F1"/>

        <ListView
            android:id="@+id/listeAccueil2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <!-- Barre en bas -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/home"
            android:contentDescription="Home"/>

        <ImageButton
            android:id="@+id/btnExercice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/sport"
            android:contentDescription="Exercice"/>

        <ImageButton
            android:id="@+id/btnNutrition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/food"
            android:contentDescription="Nutrition"/>



        <ImageButton
            android:id="@+id/btnProfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/profil"
            android:contentDescription="Profil" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
